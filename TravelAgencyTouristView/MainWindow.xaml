<Window x:Class="TravelAgencyTouristView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyTouristView"
        mc:Ignorable="d"
        Title="Программа учета" Height="450" Width="800" Background="#8B8BFD">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Путешествия" Click="TripsClick"></MenuItem>
            <MenuItem Header="Экскурсии" Click="ExcursionsClick"></MenuItem>
            <MenuItem Header="Посещенные места" Click="PlacesClick"></MenuItem>
            <MenuItem Header="Получение списка" Click="ReportGuidesbyTripsClick"></MenuItem>
            <MenuItem Header="Отчет" Click="ReportTripsClick"></MenuItem>
        </Menu>
        <Image Name ="img" Source="images/yellow-ticket.jpg" Margin="0,30,0,0"></Image>
    </Grid>
</Window>
