<Window x:Class="TravelAgencyOperatorView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyOperatorView"
        mc:Ignorable="d"
        Title="Оператор" Height="450" Width="800" Background="#BF80FF">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Гиды" Click="Guides_Click"></MenuItem>
            <MenuItem Header="Туры" Click="Tours_Click"></MenuItem>
            <MenuItem Header="Остановки" Click="Stops_Click"></MenuItem>
            <MenuItem Header="Получение списка" Click="ReportExcursionsbyTours_Click"></MenuItem>
            <MenuItem Header="Отчет" Click="ReportGuides_Click"></MenuItem>            
        </Menu>
        <Image Name ="img" Source="images/yellow-ticket.jpg" Margin="0,30,0,0"></Image>
    </Grid>
</Window>
